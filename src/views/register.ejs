                                                    <span class="fileupload-exists"><i class="fa fa-undo"></i> 更换图片</span>
                                                    <input id="avatar" type="file" class="btn-light" name="avatar" value="/images/avatar.png" />
                                                </button>
                                                <a href="#" class="btn btn-danger fileupload-exists" data-dismiss="fileupload"><i
                                                        class="fa fa-trash"></i> 删除</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group text-right m-b-0">
                                    <button class="btn btn-custom waves-effect waves-light" type="submit" style="background-color: rgb(68, 132, 200);border: 0;">
                                        提交
                                    </button>
                                    <button type="button" class="btn btn-light waves-effect m-l-5" onclick="window.location.href = location.origin + '/login';">
                                        取消
                                    </button>
